@page
@model Tienda_saludable.Pages.VentaSca.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Comprar Producto</h1>

<h4>Venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Venta.ClienteID" class="control-label"></label>
                <select asp-for="Venta.ClienteID" class ="form-control" asp-items="ViewBag.ClienteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Venta.FechaVenta" class="control-label"></label>
                <input asp-for="Venta.FechaVenta" class="form-control" />
                <span asp-validation-for="Venta.FechaVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Venta.TotalVenta" class="control-label"></label>
                <input asp-for="Venta.TotalVenta" class="form-control" />
                <span asp-validation-for="Venta.TotalVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Regresar A La Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
